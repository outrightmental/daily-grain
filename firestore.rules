rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user ID from phone number
    function getUserIdByPhone(phoneNumber) {
      return request.auth.token.phone_number == phoneNumber;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow authenticated users to read their own data
      allow read: if isAuthenticated() && 
                     get(/databases/$(database)/documents/users/$(userId)).data.phoneNumber == request.auth.token.phone_number;
      // Only Cloud Functions with Admin SDK can write
      allow write: if false;
    }
    
    // Habits collection
    match /habits/{habitId} {
      // Allow authenticated users to read their own habits
      allow read: if isAuthenticated() && 
                     get(/databases/$(database)/documents/habits/$(habitId)).data.userId == 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).id;
      // Only Cloud Functions with Admin SDK can write
      allow write: if false;
    }
    
    // Habit logs collection
    match /habitLogs/{logId} {
      // Allow authenticated users to read logs for their habits
      allow read: if isAuthenticated();
      // Only Cloud Functions with Admin SDK can write
      allow write: if false;
    }
    
    // User state collection
    match /userStates/{userId} {
      allow read, write: if false;  // Only Cloud Functions with Admin SDK
    }
  }
}
